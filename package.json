{
  "name": "autofalcon-microsoft-edge",
  "version": "1.0.0",
  "description": "Automatic Falconlink Login",
  "main": "main.js",
  "author": "Caleb",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "selenium-webdriver": "^4.12.0"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.caleb.autofalcon",
    "productName": "Autofalcon",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "Faith long Logo.png",
      "falcon.icns"
    ],
    "extraResources": [
      "msedgedriver-arm64",
      "msedgedriver-x64"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "falcon.icns"
    },
    "x64ArchFiles": [
      "msedgedriver-x64"
    ]
  }
